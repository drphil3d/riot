{% extends "base.jinja2" %}
{% block content %}
    <h1 class="bd-title" id="banner">Actions</h1>
    <hr>
    <h4 id="info"><i class="fa fa-refresh fa-spin" style="font-size:24px"></i></h4>
    <div id="result"></div>
{% endblock %}
{% block code %}

    <script src="assets/auth.js"></script>

    <script>
        var input = {};
        var lambda = new AWS.Lambda();
        lambda.invoke({
            FunctionName: 'iotGetActions',
            Payload: JSON.stringify(input)
        }, function (err, data) {
            if (err) {
                console.log(err, err.stack);
                if (err.code === 'CredentialsError') {
                    Snerted.signOut();
                }
                else {
                    info.innerHTML = alert_msg('danger', err.code);
                }
            }
            else {
                var output = JSON.parse(data.Payload);
                var h = "<div class='list-group'>";
                for (var i in output) {
                    h += "<a onclick='publish(\"";
                    h += output[i].key;
                    h += "\",\"";
                    h += output[i].title;
                    h += "\")' class='list-group-item list-group-item-action'>";
                    h += "<i class=\"fa fa-" + output[i].icon + "\"></i>&nbsp;"
                    h += output[i].title;
                    h += "</a>";
                }
                h += "</div>";
                info.innerHTML = "";
                result.innerHTML = h;
            }
        });

    </script>

{% endblock %}
